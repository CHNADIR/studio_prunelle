{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Modifier l'utilisateur</h1>
        <a href="{{ path('admin_user_index') }}" class="btn btn-outline-primary btn-sm">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            {{ include('user/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
    </div>

    <div class="mt-3">
        {{ include('user/_delete_form.html.twig', {user: user}) }}
    </div>
</div>
{% endblock %}
