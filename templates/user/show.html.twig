{% extends 'base.html.twig' %}

{% block title %}Utilisateur #{{ user.id }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Détail utilisateur</h1>
        <div>
            <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-outline-secondary btn-sm me-1">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            <a href="{{ path('admin_user_index') }}" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-borderless mb-0">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Rôles</th>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge bg-primary me-1">{{ role|replace({'ROLE_':' '})|upper }}</span>
                            {% endfor %}
                        </td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th>Dernière connexion</th>
                        <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '-' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        {{ include('user/_delete_form.html.twig', {user: user}) }}
    </div>
</div>
{% endblock %}
