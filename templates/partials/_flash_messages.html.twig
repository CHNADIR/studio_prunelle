{% if app.flashes|length > 0 %}
    <div class="flash-messages mt-3 mb-3">
        {% for label, messages in app.flashes %}
            {% if label == 'confirmation' %}
                {% for data in messages %}
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                {{ data.message }}
                            </div>
                            <div>
                                <a href="{{ path(data.route, data.params) }}" class="btn btn-sm btn-warning me-2">Confirmer</a>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                {% set alertClass = 'alert-info' %}
                {% set icon = 'info-circle' %}
                
                {% if label == 'success' %}
                    {% set alertClass = 'alert-success' %}
                    {% set icon = 'check-circle' %}
                {% elseif label == 'error' %}
                    {% set alertClass = 'alert-danger' %}
                    {% set icon = 'exclamation-circle' %}
                {% elseif label == 'warning' %}
                    {% set alertClass = 'alert-warning' %}
                    {% set icon = 'exclamation-triangle' %}
                {% endif %}
                
                {% for message in messages %}
                    <div class="alert {{ alertClass }} alert-dismissible fade show" role="alert">
                        <i class="bi bi-{{ icon }} me-2"></i>
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endif %}
        {% endfor %}
    </div>
{% endif %}