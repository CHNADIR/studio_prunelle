{% macro form_buttons(cancel_url, submit_label = 'Enregistrer', cancel_label = 'Annuler') %}
    <div class="d-flex justify-content-between mt-4">
        <a href="{{ cancel_url }}" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> {{ cancel_label }}
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> {{ submit_label }}
        </button>
    </div>
{% endmacro %}

{% macro card_section(title, bg_class = 'bg-primary') %}
    <div class="card mb-4">
        <div class="card-header {{ bg_class }} text-white">
            <h4 class="mb-0">{{ title }}</h4>
        </div>
        <div class="card-body">
            {{ block('card_content') }}
        </div>
    </div>
{% endmacro %}