{% extends 'base.html.twig' %}

{% block title %}Modifier Planche - {{ planche.libelle }} - Studio Prunelle{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-pencil me-2"></i>Modifier "{{ planche.libelle }}"</h1>
        <div>
            <a href="{{ path('admin_planche_index') }}" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
            <a href="{{ path('admin_planche_show', {id: planche.id}) }}" class="btn btn-outline-info">
                <i class="bi bi-eye"></i> Voir
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Modifier les informations</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.libelle, 'Nom de la planche', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.libelle) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <div class="mb-4 form-check">
                            {{ form_widget(form.active, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.active, 'Planche active', {'label_attr': {'class': 'form-check-label fw-bold'}}) }}
                            {{ form_errors(form.active) }}
                            <div class="form-text">
                                {% if planche.active %}
                                    <span class="text-success">Cette planche est actuellement active</span>
                                {% else %}
                                    <span class="text-warning">Cette planche est actuellement inactive</span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="{{ path('admin_planche_index') }}" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-lg"></i> Mettre à jour
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 