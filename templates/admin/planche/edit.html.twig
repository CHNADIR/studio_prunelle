{% extends 'base.html.twig' %}
{% block title %}Modifier la planche{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Modifier la planche</h1>
        <a href="{{ path('admin_planche_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>

    {% include 'partials/_flash_messages.html.twig' %}

    <div class="card shadow-sm">
        <div class="card-body">
            {% include 'admin/planche/_form.html.twig' with {button_label: 'Mettre à jour'} %}
        </div>
    </div>
    <div class="mt-3">
        {% include 'admin/planche/_delete_form.html.twig' %}
    </div>
</div>
{% endblock %}
