{% form_theme form 'bootstrap_5_horizontal_layout.html.twig' %}

{{ form_start(form, {attr:{class:'needs-validation'}, novalidate:true}) }}

<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-grid-3x3 me-2"></i>Informations de la planche</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.nom, {
                    help: 'Nom descriptif de la planche (ex: Portrait A4, Photo 10x15)'
                }) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.type, {
                    help: 'Type de planche selon son usage'
                }) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.usage, {
                    help: 'Mode de commercialisation'
                }) }}
            </div>
        </div>
        
        <div class="row">
            <div class="col-12">
                {{ form_row(form.formats, {
                    help: 'Formats disponibles en JSON : ["10x15","portrait"] ou liste séparée par virgules : 10x15, portrait',
                    attr: {
                        'data-bs-toggle': 'tooltip',
                        'data-bs-placement': 'top',
                        'title': 'Exemple: ["10x15", "13x18", "portrait"] ou 10x15, 13x18, portrait'
                    }
                }) }}
            </div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="bi bi-currency-euro me-2"></i>Tarification</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.prixEcole, {
                    help: 'Prix facturé à l\'école (généralement inférieur)'
                }) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.prixParents, {
                    help: 'Prix de vente aux parents'
                }) }}
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-12">
                <div class="form-check">
                    {{ form_widget(form.actif) }}
                    {{ form_label(form.actif) }}
                </div>
                {{ form_help(form.actif) }}
                {{ form_errors(form.actif) }}
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between">
    <a href="{{ path('admin_planche_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Annuler
    </a>
    <button class="btn btn-success" type="submit">
        <i class="bi bi-check-circle me-1"></i>{{ button_label|default('Enregistrer') }}
    </button>
</div>

{{ form_end(form) }}
