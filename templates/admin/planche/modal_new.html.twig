<div class="modal-form">
    <h5>Ajouter une nouvelle planche</h5>
    
    {{ form_start(form, {'attr': {'id': 'modal-form-planche', 'data-ajax': 'true'}}) }}
        <div class="mb-3">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom) }}
            {{ form_errors(form.nom) }}
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.type) }}
                {{ form_widget(form.type) }}
                {{ form_errors(form.type) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.usage) }}
                {{ form_widget(form.usage) }}
                {{ form_errors(form.usage) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.formats) }}
            {{ form_widget(form.formats, {'attr': {'rows': 2, 'placeholder': '["10x15", "portrait"]'}}) }}
            {{ form_errors(form.formats) }}
            <div class="form-text">Saisir un JSON valide ex : ["10x15","portrait"] ou une liste séparée par virgules.</div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.prixEcole) }}
                {{ form_widget(form.prixEcole) }}
                {{ form_errors(form.prixEcole) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.prixParents) }}
                {{ form_widget(form.prixParents) }}
                {{ form_errors(form.prixParents) }}
            </div>
        </div>

        <div class="mb-3 form-check">
            {{ form_widget(form.actif) }}
            {{ form_label(form.actif) }}
        </div>

        <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Annuler</button>
            <button type="submit" class="btn btn-primary">Ajouter</button>
        </div>
    {{ form_end(form) }}
</div> 