{% extends 'base.html.twig' %}
{% block title 'Détail planche' %}

{% block body %}
<div class="card shadow-sm">
  <div class="card-header d-flex justify-content-between">
      <h2 class="h5 mb-0">{{ planche.nom }}</h2>
      <a href="{{ path('admin_planche_edit', {'id': planche.id}) }}" class="btn btn-sm btn-primary">
          <i class="bi bi-pencil"></i> Éditer
      </a>
  </div>
  <div class="card-body">
     <dl class="row">
        <dt class="col-sm-3">Type</dt>
        <dd class="col-sm-9">{{ planche.type.name|title }}</dd>

        <dt class="col-sm-3">Usage</dt>
        <dd class="col-sm-9">{{ planche.usage }}</dd>

        <dt class="col-sm-3">Formats</dt>
        <dd class="col-sm-9">
            {% for f in planche.formats %}
                <span class="badge text-bg-secondary me-1">{{ f }}</span>
            {% endfor %}
        </dd>

        <dt class="col-sm-3">Prix école</dt>
        <dd class="col-sm-9">{{ planche.prixEcole|number_format(2, ',', ' ') }} €</dd>

        <dt class="col-sm-3">Prix parents</dt>
        <dd class="col-sm-9">{{ planche.prixParents|number_format(2, ',', ' ') }} €</dd>
     </dl>
  </div>
</div>

<a href="{{ path('admin_planche_index') }}" class="btn btn-link mt-3">
  <i class="bi bi-arrow-left"></i> Retour à la liste
</a>
{% endblock %}
