<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="{{ path('home') }}">Studio Prunelle</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') == 'home' %}active{% endif %}" href="{{ path('home') }}">Accueil</a>
                        </li>
                        
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.get('_route') starts with 'admin_ecole' %}active{% endif %}" href="{{ path('admin_ecole_index') }}">Écoles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.get('_route') starts with 'admin_prise_de_vue' %}active{% endif %}" href="{{ path('admin_prise_de_vue_index') }}">Prises de vue</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle {% if app.request.get('_route') matches '/admin_(theme|type_prise|type_vente)/' %}active{% endif %}" href="#" id="referentielsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Référentiels
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="referentielsDropdown">
                                    <li><a class="dropdown-item {% if app.request.get('_route') starts with 'admin_theme' %}active{% endif %}" href="{{ path('admin_theme_index') }}">Thèmes</a></li>
                                    <li><a class="dropdown-item {% if app.request.get('_route') starts with 'admin_type_prise' %}active{% endif %}" href="{{ path('admin_type_prise_index') }}">Types de prise</a></li>
                                    <li><a class="dropdown-item {% if app.request.get('_route') starts with 'admin_type_vente' %}active{% endif %}" href="{{ path('admin_type_vente_index') }}">Types de vente</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#">Planches</a></li>
                                </ul>
                            </li>
                        {% endif %}
                        
                        {% if is_granted('ROLE_SUPERADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="#">Utilisateurs</a>
                            </li>
                        {% endif %}
                        
                        {% if is_granted('ROLE_PHOTOGRAPHE') and not is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.get('_route') starts with 'photographe_prise_de_vue' %}active{% endif %}" href="{{ path('photographe_prise_de_vue_index') }}">Mes prises de vue</a>
                            </li>
                        {% endif %}
                    </ul>
                    
                    <ul class="navbar-nav ms-auto">
                        {% if app.user %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    {{ app.user.nom }}
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="#">Mon profil</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form action="{{ path('app_logout') }}" method="post" class="dropdown-item p-0">
                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                                            <button type="submit" class="btn btn-link dropdown-item text-start w-100 p-2">Déconnexion</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
        
        <main>
            <div class="container mt-3">
                {% include 'partials/_flash_messages.html.twig' %}
            </div>
            {% block body %}{% endblock %}
        </main>
        
        <footer class="footer mt-5 py-3 bg-light">
            <div class="container text-center">
                <span class="text-muted">© 2025 Studio Prunelle. Tous droits réservés.</span>
            </div>
        </footer>

        <script>
document.addEventListener('DOMContentLoaded', function() {
    // Intercepter tous les clics sur les liens vers /logout
    document.addEventListener('click', function(e) {
        const target = e.target.closest('a');
        if (target && target.getAttribute('href') === '/logout') {
            e.preventDefault();
            // Soumettre le formulaire de déconnexion le plus proche
            document.querySelector('form[action="/logout"]').submit();
        }
    });
});
</script>
    </body>
</html>
